{
    "name": "hfsnippets",
    "displayName": "HybridForms Snippets",
    "description": "Integrates HybridForms snippets into VS Code",
    "version": "4.1.0",
    "publisher": "icomedias",
    "icon": "HF_Extension_icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/IcoDeveloper/hfsnippets-extension.git"
    },
    "engines": {
        "vscode": "^1.28.0"
    },
    "scripts": {
        "package": "npx vsce package",
        "publish": "npx vsce publish"
    },
    "categories": [
        "Snippets"
    ],
    "contributes": {
        "snippets": [
            {
                "language": "html",
                "path": "./snippets/layout/attribute-snippets.json"
            },
            {
                "language": "html",
                "path": "./snippets/layout/block-snippets.json"
            },
            {
                "language": "html",
                "path": "./snippets/layout/formcontrol-snippets.json"
            },
            {
                "language": "html",
                "path": "./snippets/layout/extended-snippets.json"
            },
            {
                "language": "javascript",
                "path": "./snippets/script/javascript-snippets.json"
            },
            {
                "language": "typescript",
                "path": "./snippets/script/typescript-snippets.json"
            },
            {
                "language": "scss",
                "path": "./snippets/style/scss-snippets.json"
            }
        ]
    }
}

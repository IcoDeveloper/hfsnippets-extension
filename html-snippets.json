{
	"Condition": {
		"scope": "html",
		"prefix": "hf-conditions",
		"body": [
			"<div id=\"${1:id}\"",
			"\t data-win-control=\"HFWinJSCtrl.Condition\"",
			"\t data-hf-condition='{",
				"\t\t\"cond\": [ { \"type\": \"$2\", \"id\": \"$3\" }$4 ]",
			"\t }'>",
			"\t$5",
			"</div>"
		],
		"description": "Creates a block, area, tab, condition definition"
	},

	"Page Condition": {
		"scope": "html",
		"prefix": "hf-pagecondition",
		"body": [
			"<li data-hf-title=\"$1\"", 
			"\tdata-hf-condition='{",
				"\t\t\"cond\": [{ \"type\": \"$2\", \"id\": \"$3\"$4}$5]",
			"\t}'>",
			"\t<ol>",
				"\t\t$6",
			"\t</ol>",
			"</li>"
		],
		"description": "Creates a Page condition definition"
	},

	"Template Condition": {
		"scope": "html",
		"prefix": "hf-templatecondition",
		"body": [
			"<li data-hf-title=\"${1:Tab Name}\"", 
			"\tdata-hf-condition='{",
				"\t\t\"cond\": [ { \"type\": \"$2\", \"id\": \"$3\"$4}$5]",
				"\t}'>",
				"\t$6",
				"</li>"
		],
		"description": "Creates a Template condition definition"
	},

	"Template": {
		"scope": "html",
		"prefix": "hf-block",
		"body": [
			"<div id=\"${1:id}\"", 
			"\t data-win-control=\"WinJS.Binding.Template\">",
				"\t$2",
			"</div>"
		],
		"description": "Creates an empty block container"
	},

	"CheckBox": {
		"scope": "html",
		"prefix": "hf-checkbox",
		"body": [
			"<input id=\"${1:id}\"", 
			"\t   type=\"checkbox\"",
			"\t   value=\"${2:value}\"", 
			"\t   data-win-control=\"HFWinJSCtrl.CheckBox\"",  
			"\t   data-win-options=\"{ label: '$3', list: ${4:true}, defaultValue: ${5:true}}\" />"
		],
		"description": "Creates a Checkbox"
	},


{
    "Title Attribute": {
        "scope": "html",
        "prefix": "hf-title-attr",
        "body": [
            "data-hf-title=\"$1\""
        ],
        "description": "Creates a data-hf-condition attribute"
    },

    "Condition Attribute": {
        "scope": "html",
        "prefix": "hf-condition-attr",
        "body": [
            "data-hf-condition='{",
            "    \"cond\": [{",
            "        \"type\": \"$1\",",
            "        \"id\": \"$2\",",
            "        \"val\": \"$3\"",
            "    }],",
            "    \"else\": \"${4:invisible}\"",
            "}'"
        ],
        "description": "Creates a data-hf-condition attribute"
    }
}